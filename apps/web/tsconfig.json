{
  "extends": [
    "@repo/typescript-config/nextjs.json",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@repo/*": ["../../packages/*"]
    },
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "types": ["react", "react-dom"]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
